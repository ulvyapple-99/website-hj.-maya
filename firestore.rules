
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // PUBLIK: Boleh baca semua data (agar menu tampil di web)
      allow read: if true;
      
      // ADMIN: Hanya boleh tulis/edit jika sudah login
      allow write: if request.auth != null;
    }
  }
}
