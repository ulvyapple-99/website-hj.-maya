rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan SEMUA orang membaca data (Public Read)
    // Izinkan HANYA Admin login menulis data (Auth Write)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}